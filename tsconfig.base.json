{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rainforest-tools/design-system": [
        "libs/design-system/src/lib/index.ts"
      ],
      "@rainforest-tools/design-system/components/lit": [
        "libs/design-system/src/lib/components/lit/index.ts"
      ],
      "@rainforest-tools/design-system/plugins": [
        "libs/design-system/src/lib/plugins/index.ts"
      ],
      "@personal-website/*": [
        "apps/personal-website/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}